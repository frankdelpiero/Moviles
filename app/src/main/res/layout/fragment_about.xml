<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#82E0AA"
    tools:context=".AboutFragment">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/authorProyect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del autor"
            android:textAlignment="center"
            android:textSize="27dp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:textCursorDrawable="@android:color/holo_red_light"
            android:id="@+id/name"
            android:text="Franccy del Piero Sambrano Ganoza" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esta aplicacion fue creada gracias a Encode. Su funcionamiento es muy simple. Nada mas entrar en la aplicacion si desplazamos a la derecha encontraremos un panel que nos llevara alrededor de los programas "
            android:layout_marginTop="100dp"
            android:textAlignment="center"
            android:layout_below="@id/name"
            android:textStyle="bold|italic" />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Version: v1.27"
        android:textSize="20dp"
        android:textStyle="bold" />

    </RelativeLayout>


</FrameLayout>